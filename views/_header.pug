link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css')
link(href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;800&display=swap" rel="stylesheet")
header.header
  .header__overlay

  .header__toggle
    button.nav__toggle-btn(aria-label="Toggle navigation")
      svg.nav__toggle-icon
        use(xlink:href="/img/icons.svg#icon-menu")

  nav.nav.nav--tours
    a.nav__el(href='/') 
     span Home 
      i.fa-solid.fa-house-chimney.nav__icon

  // BRAND BLOCK
  .header__brand
    .header__logo
      img(src='/img/background.png' alt='Natours logo')
    .header__tagline
      a.header__tagline-link(href='/') 
        | EXPLORE WITH GREEK NATOURS 
        

  nav.nav.nav--user
    if user
      a.nav__el.nav__el--logout Log out âžœ
      a.nav__el(href='/me')
        img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
        span= user.name.split(' ')[0]
    else
      a.nav__el(href='/login')
        
        span Log in
          i.fa-solid.fa-arrow-right-to-bracket.nav__icon 
      a.nav__el.nav__el--cta(href='/signup')
        
        span Sign Up
          i.fa-solid.fa-user-plus.nav__icon 
