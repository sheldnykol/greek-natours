mixin reviewCard(review)
  .reviews__card
    .reviews__avatar
      - const photoSrc = review.user.photo.startsWith('http') ? review.user.photo : `/img/users/${review.user.photo || 'default.jpg'}`
      img.reviews__avatar-img(src=photoSrc, alt=`${review.user.name}`)
      h6.reviews__user= review.user.name
    p.reviews__text= review.review
    .reviews__rating
      .reviews__rating-bar
        .reviews__rating-fill(style=`width: ${(review.rating / 5) * 100}%`)
      span.reviews__rating-text= `${review.rating}/5`